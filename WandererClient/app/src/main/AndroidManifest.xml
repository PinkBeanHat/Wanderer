<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wanderer.client">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".Wanderer"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wanderer"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".activitiy.MainActivity"
            android:screenOrientation="landscape"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activitiy.TitleActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".activitiy.FriendActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".activitiy.RoomSearchActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".activitiy.RoomActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".activitiy.GameActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".activitiy.NoticeActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".activitiy.RankingActivity"
            android:screenOrientation="landscape"/>

        <service android:name=".ClientService"
            android:enabled="true"
            android:exported="true"/>

    </application>

</manifest>